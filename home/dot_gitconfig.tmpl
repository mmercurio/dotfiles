[user]
	email = {{ .email }}
	name = {{ .name }}
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHujLfoZWksndFOY4ZJNgfVtiSOmf9vVZ+J8ECccPAFe
[gpg]
	format = ssh # requires git 2.34 of later
[commit]
	gpgsign = true
[push]
	autoSetupRemote = true
[pull]
	ff = only
[alias]
	a = add
	diffchar = diff --color-words=.
	br = !git --no-pager branch
	ca = commit --amend
	cane = commit --amend --no-edit
	cm = commit --message
	co = checkout
	cob = checkout -b
	d = diff
	dc = diff --cached
    deja = "!f() { n=${1:-5}; git log -n \"$n\" --author=\"$(git config user.name)\" --name-only --pretty=format: | grep . | sort | uniq -c | sort -nr; }; f"
	deja2 = "!f() { n=${1:-5}; git log -n \"$n\" --author=\"$(git config user.name)\" --name-only --pretty=format: | grep . | sort | uniq -c | sort -n; }; f"
	l = log --graph --pretty=format:'%C(auto)%h%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	la = l --all
	lo = !git --no-pager l -n20
	loa = lo --all
	p = push
	pf = push --force-with-lease
	ri = rebase --interactive
	st = status -sb
	undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
[core]
	excludesfile = ~/.gitignore_global
{{- if eq .chezmoi.os "windows" }}
	autocrlf = true
	sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
{{- else }}
	pager = diff-so-fancy | less --tabs=4 -RFX
{{- end }}

[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[init]
	defaultBranch = main
[rebase]
	autosquash = true
[diff]
	tool = vscode-diff
[difftool]
	prompt = false
[difftool "vscode-diff"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode-merge
[mergetool]
	keepBackup = false
[mergetool "vscode-merge"]
	cmd = code --wait $MERGED
{{ if ne .chezmoi.os "windows" -}}
[interactive]
	diffFilter = diff-so-fancy --patch
{{ end -}}

[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[include]
	path = ~/.gitconfig.local

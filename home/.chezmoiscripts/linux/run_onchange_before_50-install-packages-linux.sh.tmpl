#!/usr/bin/env bash

set -eufo pipefail

packages=(
	curl
	git
	gnupg2
	httpie
	iperf3
	jq
	keychain
	libbz2-dev
	liblzma-dev
	libssl-dev
	netcat
	net-tools
	openssh-server
	python3
	python3-venv
	ripgrep
	tmux
	htop
	vim
	zsh
)

echo 'Installing packages...'
set -x
sudo apt update
sudo apt install -y ${packages[@]}

